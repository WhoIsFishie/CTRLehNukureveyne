            text-align: center;
        }

        .header h1 {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            font-size: 3.5rem;
            font-weight: 400;
            margin-bottom: 15px;
            text-shadow: 3px 3px 0px #000;
            letter-spacing: -0.02em;
            line-height: 1.1;
            color: white;
        }

        .header p {
            font-size: 1.4rem;
            opacity: 0.9;
            font-weight: 600;
            letter-spacing: 0.01em;
            text-transform: uppercase;
            color: black;
        }

        .content {
            padding: 40px 30px;
            background: #ff4500;
        }

        .urgency-banner {
            background: #ff3300;
            color: white;
            padding: 20px;
            margin-bottom: 30px;
            text-align: center;
            font-weight: 700;
            font-size: 1.1rem;
            letter-spacing: 0.01em;
            text-transform: uppercase;
        }

        .why-section {
            margin-bottom: 40px;
        }

        .why-section h2 {
            color: white;
            font-size: 2.2rem;
            font-weight: 800;
            margin-bottom: 25px;
            padding-left: 0px;
            letter-spacing: -0.01em;
            line-height: 1.2;
            text-transform: uppercase;
        }

        .threats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
